    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_image_height"
        android:src="@drawable/ace"
        android:contentDescription="@string/banner_image_description"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/section_title_height"
        android:textAlignment="center"
        android:textColor="@color/midnightBlue"
        android:text="@string/your_top_10"
        android:textStyle="bold"
        android:background="@drawable/back"
        android:gravity="center"
        android:paddingTop="1dip"
        android:paddingBottom="1dip"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/section_margin_right"
        android:layout_marginStart="@dimen/section_margin_left">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:text="@string/categories"/>

            <Button
                android:id="@+id/more_categories"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/more_button_height"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:text="@string/more"
                android:textColor="@color/white"
                android:background="@color/midnightBlue" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_total_height"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_1" >
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="@dimen/section_margin_right"
        android:layout_marginStart="@dimen/section_margin_left">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/section_title_height"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/section_margin_left"
                android:textStyle="bold"
                android:text="@string/upcoming_events"/>

            <Button
                android:id="@+id/more_upcoming_events"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/more_button_height"
                android:layout_gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/section_margin_right"
                android:text="@string/more"
                android:textColor="@color/white"
                android:background="@color/midnightBlue" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_total_height"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_view_2" >
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
